{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "api/*": [
        "pages/api/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
